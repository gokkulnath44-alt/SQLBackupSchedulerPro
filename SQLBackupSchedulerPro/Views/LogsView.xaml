<UserControl x:Class="SQLBackupSchedulerPro.Views.LogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SQLBackupSchedulerPro.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#F8F9FA">

    <UserControl.Resources>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" 
                                    ShadowDepth="0" 
                                    Opacity="0.08" 
                                    Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern DataGrid Style -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="52"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
        </Style>

        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#6F7782"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#1A1D1F"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E8F5E9"/>
                    <Setter Property="Foreground" Value="#1A1D1F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#6F7782"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                <ContentPresenter Content="{TemplateBinding Tag}"
                                                 Width="18" Height="18"
                                                 Margin="0,0,8,0"
                                                 VerticalAlignment="Center"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8F9FA"/>
                                <Setter Property="BorderBrush" Value="#DEE2E6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E9ECEF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="40,32,40,40">
        <StackPanel MaxWidth="1400">

            <!-- Page Header -->
            <Grid Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Activity Logs" 
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#1A1D1F"
                              Margin="0,0,0,4"/>
                    <TextBlock Text="View detailed logs of all backup operations and system activities"
                              FontSize="14"
                              Foreground="#6F7782"/>
                </StackPanel>

                <!-- Optional: Add filter or refresh buttons here -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal"
                           VerticalAlignment="Center">
                    <Button Content="Refresh" Click="Refresh_Click"
                           Style="{StaticResource SecondaryButtonStyle}"
                           Margin="0,0,12,0">
                        <Button.Tag>
                            <Path Data="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z"
                                  Fill="#6F7782"
                                  Stretch="Uniform"/>
                        </Button.Tag>
                    </Button>

                    <Button Content="Clear Logs"  Click="ClearLogs_Click"
                           Style="{StaticResource SecondaryButtonStyle}">
                        <Button.Tag>
                            <Path Data="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"
                                  Fill="#6F7782"
                                  Stretch="Uniform"/>
                        </Button.Tag>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Stats Cards -->
            <Grid Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Logs -->
                <Border Grid.Column="0" 
                        Background="White"
                        CornerRadius="10"
                        Padding="16"
                        >
                    <StackPanel>
                        <TextBlock Text="TOTAL LOGS"
                                  FontSize="11"
                                  FontWeight="SemiBold"
                                  Foreground="#6F7782"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding Logs.Count}"
                                  FontSize="24"
                                  FontWeight="Bold"
                                  Foreground="#1A1D1F"/>
                    </StackPanel>
                </Border>

                <!-- Info Count -->
                <Border Grid.Column="2" 
                        Background="White"
                        CornerRadius="10"
                        Padding="16"
                        >
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Ellipse Width="8" Height="8" Fill="#1565C0" Margin="0,0,6,0"/>
                            <TextBlock Text="INFO"
                                      FontSize="11"
                                      FontWeight="SemiBold"
                                      Foreground="#6F7782"/>
                        </StackPanel>
                        <TextBlock Text="{Binding InfoCount}"
                                  FontSize="24"
                                  FontWeight="Bold"
                                  Foreground="#1565C0"/>
                    </StackPanel>
                </Border>

                <!-- Warning Count -->
                <Border Grid.Column="4" 
                        Background="White"
                        CornerRadius="10"
                        Padding="16"
                        >
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Ellipse Width="8" Height="8" Fill="#F57F17" Margin="0,0,6,0"/>
                            <TextBlock Text="WARNING"
                                      FontSize="11"
                                      FontWeight="SemiBold"
                                      Foreground="#6F7782"/>
                        </StackPanel>
                        <TextBlock Text="{Binding WarningCount}"
                                  FontSize="24"
                                  FontWeight="Bold"
                                  Foreground="#F57F17"/>
                    </StackPanel>
                </Border>

                <!-- Error Count -->
                <Border Grid.Column="6" 
                        Background="White"
                        CornerRadius="10"
                        Padding="16"
                        >
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Ellipse Width="8" Height="8" Fill="#C62828" Margin="0,0,6,0"/>
                            <TextBlock Text="ERROR"
                                      FontSize="11"
                                      FontWeight="SemiBold"
                                      Foreground="#6F7782"/>
                        </StackPanel>
                        <TextBlock Text="{Binding ErrorCount}"
                                  FontSize="24"
                                  FontWeight="Bold"
                                  Foreground="#C62828"/>
                    </StackPanel>
                </Border>

                
            </Grid>

            <!-- Logs Table Card -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Log Entries" 
                              FontSize="18"
                              FontWeight="SemiBold"
                              Foreground="#1A1D1F"
                              Margin="0,0,0,20"/>

                    <!-- Data Grid -->
                    <DataGrid ItemsSource="{Binding Logs}"
                              Style="{StaticResource ModernDataGridStyle}"
                              ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                              CellStyle="{StaticResource DataGridCellStyle}">
                        <DataGrid.Columns>
                            <!-- Timestamp Column -->
                            <DataGridTextColumn Header="TIMESTAMP" 
                                              Binding="{Binding Timestamp, StringFormat='MMM dd, yyyy HH:mm:ss'}"
                                              Width="180">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="Foreground" Value="#6F7782"/>
                                        <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Level Column with Badge -->
                            <DataGridTemplateColumn Header="LEVEL" Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="6"
                                               Padding="10,5"
                                               HorizontalAlignment="Left">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Level}" Value="Info">
                                                            <Setter Property="Background" Value="#E3F2FD"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Level}" Value="Information">
                                                            <Setter Property="Background" Value="#E3F2FD"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Level}" Value="Success">
                                                            <Setter Property="Background" Value="#E8F5E9"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Level}" Value="Warning">
                                                            <Setter Property="Background" Value="#FFF9E6"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Level}" Value="Error">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Level}" Value="Debug">
                                                            <Setter Property="Background" Value="#F3E5F5"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="12" 
                                                      FontWeight="SemiBold"
                                                      Text="{Binding Level}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Level}" Value="Info">
                                                                <Setter Property="Foreground" Value="#1565C0"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Level}" Value="Information">
                                                                <Setter Property="Foreground" Value="#1565C0"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Level}" Value="Success">
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Level}" Value="Warning">
                                                                <Setter Property="Foreground" Value="#F57F17"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Level}" Value="Error">
                                                                <Setter Property="Foreground" Value="#C62828"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Level}" Value="Debug">
                                                                <Setter Property="Foreground" Value="#6A1B9A"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Message Column -->
                            <DataGridTextColumn Header="MESSAGE" 
                                              Binding="{Binding Message}"
                                              Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="13"/>
                                        <Setter Property="Foreground" Value="#1A1D1F"/>
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="Padding" Value="0,8"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Empty State -->
                    <StackPanel HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,60,0,60">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Logs.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <Border Width="64" Height="64"
                                Background="#F1F3F5"
                                CornerRadius="32"
                                Margin="0,0,0,16">
                            <Path Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"
                                  Fill="#ADB5BD"
                                  Stretch="Uniform"
                                  Width="32" Height="32"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="No logs available"
                                  FontSize="16"
                                  FontWeight="SemiBold"
                                  Foreground="#495057"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,8"/>
                        <TextBlock Text="Log entries will appear here as operations are performed"
                                  FontSize="14"
                                  Foreground="#ADB5BD"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>