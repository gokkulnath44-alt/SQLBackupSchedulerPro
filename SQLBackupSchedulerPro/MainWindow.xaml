<Window x:Class="SQLBackupSchedulerPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:views="clr-namespace:SQLBackupSchedulerPro.Views"
        xmlns:conv="clr-namespace:SQLBackupSchedulerPro.Converters"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLBackupSchedulerPro"
        mc:Ignorable="d"
        
        Title="SQL Backup Scheduler Pro" 
        Height="700" Width="1200"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA">

    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="RadioButton">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6F7782"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Margin="8,0">
                            <Grid>
                                <!-- Active Indicator -->
                                <Border x:Name="ActiveIndicator"
                                        Width="4"
                                        Background="#2E7D32"
                                        CornerRadius="0,2,2,0"
                                        HorizontalAlignment="Left"
                                        Opacity="0"/>

                                <StackPanel Orientation="Horizontal" 
                                           Margin="{TemplateBinding Padding}"
                                           VerticalAlignment="Center">
                                    <ContentPresenter Content="{TemplateBinding Tag}"
                                                     Width="20" Height="20"
                                                     Margin="0,0,12,0"/>
                                    <ContentPresenter/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F1F3F5"/>
                                <Setter Property="Foreground" Value="#1A1D1F"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#E8F5E9"/>
                                <Setter Property="Foreground" Value="#2E7D32"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter TargetName="ActiveIndicator" Property="Opacity" Value="1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Content Fade Animation -->
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" 
                Background="White"
                BorderBrush="#E9ECEF"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- App Header -->
                <Border Grid.Row="0" 
                        Background="#2E7D32"
                        Padding="20,24">
                    <StackPanel>
                        <!-- App Icon/Logo -->
                        <Border Width="48" Height="48"
                                Background="White"
                                CornerRadius="12"
                                Margin="0,0,0,16"
                                HorizontalAlignment="Left">
                            <Path Data="M6 2c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6H6zm7 7V3.5L18.5 9H13z"
                                  Fill="#2E7D32"
                                  Stretch="Uniform"
                                  Width="24" Height="24"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="SQL Backup"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Foreground="White"/>
                        <TextBlock Text="Scheduler Pro"
                                  FontSize="14"
                                  Foreground="#C8E6C9"
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Menu -->
                <StackPanel Grid.Row="1" 
                           Margin="0,24,0,0">

                    <RadioButton x:Name="DashboardTab"
                                Style="{StaticResource NavButtonStyle}"
                                Content="Dashboard"
                                IsChecked="True"
                                GroupName="Navigation">
                        <RadioButton.Tag>
                            <Path Data="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"
                                  Stretch="Uniform"/>
                        </RadioButton.Tag>
                    </RadioButton>

                    <RadioButton x:Name="BackupTab"
                                Style="{StaticResource NavButtonStyle}"
                                Content="Backup Now"
                                GroupName="Navigation">
                        <RadioButton.Tag>
                            <Path Data="M19 12v7H5v-7H3v7c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2v-7h-2zm-6 .67l2.59-2.58L17 11.5l-5 5-5-5 1.41-1.41L11 12.67V3h2z"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"
                                  Stretch="Uniform"/>
                        </RadioButton.Tag>
                    </RadioButton>

                    <RadioButton x:Name="RestoreTab"
                                Style="{StaticResource NavButtonStyle}"
                                Content="Restore"
                                GroupName="Navigation">
                        <RadioButton.Tag>
                            <Path Data="M13 3c-4.97 0-9 4.03-9 9H1l3.89 3.89.07.14L9 12H6c0-3.87 3.13-7 7-7s7 3.13 7 7-3.13 7-7 7c-1.93 0-3.68-.79-4.94-2.06l-1.42 1.42C8.27 19.99 10.51 21 13 21c4.97 0 9-4.03 9-9s-4.03-9-9-9zm-1 5v5l4.28 2.54.72-1.21-3.5-2.08V8H12z"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"
                                  Stretch="Uniform"/>
                        </RadioButton.Tag>
                    </RadioButton>

                    <RadioButton x:Name="LogsTab"
                                Style="{StaticResource NavButtonStyle}"
                                Content="Logs"
                                GroupName="Navigation">
                        <RadioButton.Tag>
                            <Path Data="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"
                                  Stretch="Uniform"/>
                        </RadioButton.Tag>
                    </RadioButton>

                    <!-- Divider -->
                    <Border Height="1" 
                            Background="#E9ECEF" 
                            Margin="16,16,16,16"/>

                    <RadioButton x:Name="SettingsTab"
                                Style="{StaticResource NavButtonStyle}"
                                Content="Settings"
                                GroupName="Navigation">
                        <RadioButton.Tag>
                            <Path Data="M19.14 12.94c.04-.3.06-.61.06-.94 0-.32-.02-.64-.07-.94l2.03-1.58c.18-.14.23-.41.12-.61l-1.92-3.32c-.12-.22-.37-.29-.59-.22l-2.39.96c-.5-.38-1.03-.7-1.62-.94L14.4 2.81c-.04-.24-.24-.41-.48-.41h-3.84c-.24 0-.43.17-.47.41l-.36 2.54c-.59.24-1.13.57-1.62.94l-2.39-.96c-.22-.08-.47 0-.59.22L2.74 8.87c-.12.21-.08.47.12.61l2.03 1.58c-.05.3-.09.63-.09.94s.02.64.07.94l-2.03 1.58c-.18.14-.23.41-.12.61l1.92 3.32c.12.22.37.29.59.22l2.39-.96c.5.38 1.03.7 1.62.94l.36 2.54c.05.24.24.41.48.41h3.84c.24 0 .44-.17.47-.41l.36-2.54c.59-.24 1.13-.56 1.62-.94l2.39.96c.22.08.47 0 .59-.22l1.92-3.32c.12-.22.07-.47-.12-.61l-2.01-1.58zM12 15.6c-1.98 0-3.6-1.62-3.6-3.6s1.62-3.6 3.6-3.6 3.6 1.62 3.6 3.6-1.62 3.6-3.6 3.6z"
                                  Fill="{Binding RelativeSource={RelativeSource AncestorType=RadioButton}, Path=Foreground}"
                                  Stretch="Uniform"/>
                        </RadioButton.Tag>
                    </RadioButton>
                </StackPanel>

                <!-- Version Footer -->
                <Border Grid.Row="2" 
                        Padding="20,16"
                        Background="#F8F9FA">
                    <StackPanel>
                        <TextBlock Text="Version 1.0.0"
                                  FontSize="11"
                                  Foreground="#6F7782"/>
                        <TextBlock Text="© 2026 SQL Backup Pro"
                                  FontSize="11"
                                  Foreground="#ADB5BD"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <!-- Dashboard View -->
            <views:DashboardView x:Name="DashboardView"
                                Visibility="{Binding IsChecked, ElementName=DashboardTab, Converter={StaticResource BoolToVisConverter}}">
                <views:DashboardView.Style>
                    <Style TargetType="views:DashboardView">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=DashboardTab}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </views:DashboardView.Style>
            </views:DashboardView>

            <!-- Backup View -->
            <views:BackupView x:Name="BackupView"
                             Visibility="{Binding IsChecked, ElementName=BackupTab, Converter={StaticResource BoolToVisConverter}}">
                <views:BackupView.Style>
                    <Style TargetType="views:BackupView">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=BackupTab}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </views:BackupView.Style>
            </views:BackupView>

            <!-- Restore View -->
            <views:RestoreView x:Name="RestoreView"
                              Visibility="{Binding IsChecked, ElementName=RestoreTab, Converter={StaticResource BoolToVisConverter}}">
                <views:RestoreView.Style>
                    <Style TargetType="views:RestoreView">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=RestoreTab}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </views:RestoreView.Style>
            </views:RestoreView>

            <!-- Logs View -->
            <views:LogsView x:Name="LogsView"
                           Visibility="{Binding IsChecked, ElementName=LogsTab, Converter={StaticResource BoolToVisConverter}}">
                <views:LogsView.Style>
                    <Style TargetType="views:LogsView">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=LogsTab}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </views:LogsView.Style>
            </views:LogsView>

            <!-- Settings View -->
            <views:SettingsView x:Name="SettingsView"
                               Visibility="{Binding IsChecked, ElementName=SettingsTab, Converter={StaticResource BoolToVisConverter}}">
                <views:SettingsView.Style>
                    <Style TargetType="views:SettingsView">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=SettingsTab}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </views:SettingsView.Style>
            </views:SettingsView>
        </Grid>
    </Grid>
</Window>